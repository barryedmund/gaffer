<%= form_tag user_sessions_path, class: 'form-inline' do %>
	<div class="row">
		<div class="form-group">
			<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
				<%= text_field_tag :email, params[:email], id: 'login_email', class: "mdl-textfield__input" %>
				<%= label_tag :email, "Email", class: "mdl-textfield__label", for: "login_email" %>
			</div>
		</div>
		<div class="form-group">
			<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
				<%= password_field_tag :password, nil, class: "mdl-textfield__input" %>
				<%= label_tag :password, "Password", class: "mdl-textfield__label", for: "password" %>
			</div>
		</div>
		<%= submit_tag "Log in", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
	</div>
	<%= link_to "Forgot Password", new_password_reset_path %>
<% end %>
