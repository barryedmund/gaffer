<%= form_tag user_sessions_path, class: 'form-inline pull-right' do %>
	<div class="row text-center">
		<div class="form-group">
			<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
				<%= text_field_tag :email, params[:email], id: 'login_email', class: "mdl-textfield__input" %>
				<%= label_tag :email, "Email", class: "mdl-textfield__label", for: "login_email" %>
			</div>
		</div>
		<div class="form-group">
			<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label width-100-pc">
				<%= password_field_tag :password, nil, class: "mdl-textfield__input" %>
				<%= label_tag :password, "Password", class: "mdl-textfield__label", for: "password" %>
			</div>
		</div>
		<div class="form-group">
			<%= submit_tag "Log in", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" %>
			<%= link_to "Sign Up", signup_path, class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
		</div>
	</div>
	<div class="row pull-right">
		<%= link_to "Forgot password", new_password_reset_path %>
	</div>
<% end %>
