<div class="row">
	<div class="col-sm-12">
		<div class="demo-card-wide mdl-card mdl-shadow--2dp">
			<div class="mdl-card__title">
        <h2 class="mdl-card__title-text">
        	<%= truncate(@team.title, length: 19) %>
        </h2>
      </div>
      <div class="mdl-card__actions">
				<table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
					<tr>
						<td class="mdl-data-table__cell--non-numeric normal-text">
							League
						</td>
						<td class="mdl-data-table__cell--non-numeric normal-text">
							<%= link_to @team.league.name, league_path(@team.league), class: "content-link" %>
						</td>
					</tr>
					<tr>
						<td class="mdl-data-table__cell--non-numeric normal-text">
							Manager
						</td>
						<td class="mdl-data-table__cell--non-numeric normal-text">
							<%= @team.user.full_name %>
						</td>
					</tr>
					<tr>
						<td class="mdl-data-table__cell--non-numeric normal-text">
							Budget
						</td>
						<td class="mdl-data-table__cell--non-numeric normal-text">
							<%= number_to_currency(@team.cash_balance_cents, precision: 0) %>
						</td>
					</tr>
					<tr>
						<td class="mdl-data-table__cell--non-numeric normal-text">
							Squad salary (week)
						</td>
						<td class="mdl-data-table__cell--non-numeric normal-text">
							<%= number_to_currency(@team.get_weekly_total_of_signed_contracts, precision: 0) %>
						</td>
					</tr>
					<tr>
						<td class="mdl-data-table__cell--non-numeric normal-text">
							Squad salary (season)
						</td>
						<td class="mdl-data-table__cell--non-numeric normal-text">
							<%= number_to_currency(@team.get_season_total_of_signed_contracts, precision: 0) %>
						</td>
					</tr>
					<tr>
						<td class="mdl-data-table__cell--non-numeric normal-text">
							Stadium
						</td>
						<td class="mdl-data-table__cell--non-numeric normal-text">
							<%= @team.stadium.name %> (<%= number_with_delimiter(@team.stadium.capacity, delimiter: ',') %>)
						</td>
					</tr>
					<tr>
						<td class="mdl-data-table__cell--non-numeric normal-text">
							Earliest deadline
						</td>
						<td class="mdl-data-table__cell--non-numeric normal-text">
							<%= @team.league.next_game_week_deadline.strftime("%a %d %b, %l:%M%P %Z") %>
						</td>
					</tr>
				</table>
			</div>
			<div class="mdl-card__supporting-text">
				<ul class="horizontal-style">
					<li><%= link_to 'Edit team', edit_league_team_path(@team.league, @team), class: "mdl-button--primary" %></li>
					<li><%= link_to 'Transfers', league_transfers_path(@team.league), class: "mdl-button--primary" %></li>
					<li><%= link_to 'Free agents', league_contracts_path(@team.league), class: "mdl-button--primary" %></li>
				</ul>
			</div>
		</div>
	</div>
	<%= render partial: "shared/team_players/tables" %>
</div>
