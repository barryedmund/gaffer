<table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
  <% team_achievements.each do |team_achievement| %>
    <tr>
      <td class="mdl-data-table__cell--non-numeric normal-text" style="border-bottom:0px;">
        <%= team_achievement.achievement.name %>
      </td>
      <td class="mdl-data-table__cell--non-numeric normal-text" style="border-bottom:0px;">
        <%= team_achievement.league_season.season.description %>
      </td>
    <tr>
      <td class="mdl-data-table__cell--non-numeric normal-text" style="border-top:0px;">
        <%= team_achievement.team.title %>
      </td>
      <td class="mdl-data-table__cell--non-numeric normal-text" style="border-top:0px;">
        <%= team_achievement.details %>
      </td>
    </tr>
  <% end %>
</table>
