<div class="mdl-card__title">
  <h3 class="mdl-card__title-text">Your active transfers</h3>
</div>
<div class="mdl-card__actions">
  <% if your_transfers.count > 0 %>
    <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp mdl-data-table-fixed">
      <% your_transfers.order(created_at: :desc).each do |transfer| %>
        <tr>
          <td class="mdl-data-table__cell--non-numeric normal-text" colspan="2" style="border-bottom:0px;">
            <%= render partial: 'transfers/your_active_transfer_headline', locals: {transfer: transfer} %>
          </td>
          <td class="normal-text" style="border-bottom: 0px;">
            <%= link_to "View", league_transfer_path(transfer.league_involved, transfer), class: "mdl-button--primary" %>
          </td>
        </tr>
        <tr>
          <%= render partial: 'transfers/transfer_teams_status_row', locals: {transfer: transfer} %>
        </tr>
      <% end %>
    </table>
  <% else %>
    <span class="normal-text">None</span>
  <% end %>
</div>
