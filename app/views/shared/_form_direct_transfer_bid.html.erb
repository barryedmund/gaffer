<%= form_for ([league, Transfer.new]) do |f| %>
	<%= f.hidden_field :primary_team_id, value: primary_team.id %>
	<%= f.hidden_field :secondary_team_id, value: secondary_team.id %>
  <%= f.hidden_field :primary_team_accepted, :value => true %>
  <%= f.hidden_field :secondary_team_accepted, :value => false %>
  <%= f.fields_for TransferItem.new do |ff| %>
  	<%= ff.hidden_field :sending_team_id, value: secondary_team.id %>
  	<%= ff.hidden_field :receiving_team_id, value: primary_team.id %>
  	<%= ff.hidden_field :transfer_item_type, value: "Player" %>
  	<%= ff.hidden_field :team_player_id, value: team_player.id %>
  <% end %>
	<%= f.submit player.full_name(true, truncate_to), class: "content-link" %>
<% end %>
