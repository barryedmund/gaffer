<div class="row">
  <div class="col-sm-12">
    <div class="demo-card-wide mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title">
        <h2 class="mdl-card__title-text">Your leagues (<%= link_to 'new', new_league_path %>)</h2>
      </div>
      <div class="mdl-card__actions">
        <% @leagues.each do |league| %>
          <div><%= link_to league.name, league, class: "content-link" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <div class="demo-card-wide mdl-card mdl-shadow--2dp">
      <span class="main_header">Your league invites</span>
      <% @league_invites = LeagueInvite.where(email: @current_user.email) %>
      <% @league_invites.each do |league_invite| %>
        <div class="container">
          <span>
            <span class="sub_header">
              <%= link_to league_invite.league.name, league_invite.league %>
            </span>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>
