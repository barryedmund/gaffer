<%= form_for(@league) do |f| %>
  <% if @league.errors.any? %>
    <div class="mdl-card__supporting-text">
      Please address the <%= "error".pluralize(@league.errors.count) %> and try again:
    </div>
    <div>
      <ul>
        <% @league.errors.full_messages.each do |message| %>
          <li>
            <i class="material-icons large error">face</i>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mdl-card__actions">
    <div class="form-group">
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.text_field :name, value: "#{Faker::Superhero.prefix.titleize} #{Faker::Dessert.variety.titleize.pluralize}", class: "mdl-textfield__input" %>
        <%= f.label :name, "League name", class: "mdl-textfield__label" %>
        <%= f.hidden_field :competition_id, value: Competition.first.id %>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit "Create", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" %>
      <%= link_to "Cancel", leagues_path, class: "cancel_link_anchor" %>
    </div>
  </div>
<% end %>
