<%= form_for(@user) do |f| %>
  <div class="row light-background-form">
    <div class="form-group sign-up-form-fields-div">
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.text_field :first_name, class: "mdl-textfield__input" %>
        <%= f.label :first_name, "First Name", class: "mdl-textfield__label" %>
      </div>
    </div>
    <div class="form-group sign-up-form-fields-div">
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.text_field :last_name, class: "mdl-textfield__input" %>
        <%= f.label :last_name, "Last Name", class: "mdl-textfield__label" %>
      </div>
    </div>
    <div class="form-group">
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.text_field :email, id: 'signup_email', class: "mdl-textfield__input" %>
        <%= f.label :email, class: "mdl-textfield__label" %>
      </div>
    </div>
    <div class="form-group sign-up-form-fields-div">
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.password_field :password, id: 'signup_password', class: "mdl-textfield__input" %>
        <%= f.label :password, class: "mdl-textfield__label", for: "signup_password" %>
      </div>
    </div>
    <div class="form-group sign-up-form-fields-div">
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.password_field :password_confirmation, class: "mdl-textfield__input" %>
        <%= f.label :password_confirmation, "Password (again)", class: "mdl-textfield__label" %>
      </div>
    </div>
    <div class="form-group sign-up-form-buttons-div">
      <%= f.submit "Sign Up", id: "sign-up-button", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" %>
      <%= link_to "Cancel", root_path, class: "cancel_link_anchor" %>
    </div>
  </div>
<% end %>
