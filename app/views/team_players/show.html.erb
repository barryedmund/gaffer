<p id="notice"><%= notice %></p>

<span class="main_header">
	<%= link_to @team.league.name, league_path(@team.league) %> >> 
	<%= link_to @team.title, league_team_path(@team.league, @team) %> >>
	<%= @team_player.player.full_name %>
</span>
<table>
	<thead>
		<tr>
			<td>Season</td>
			<td>Game week #</td>
			<td>Minutes played</td>
			<td>Goals scored</td>
			<td>Clean sheet while on pitch</td>
		</tr>
	</thead>
	<tbody>

		<% @team_player.player.player_game_weeks.joins(game_week: :season).where("season_id = ?", Season.current.first.id).order("game_weeks.starts_at DESC").each do |pgw| %>
		<tr>
			<td><%= pgw.game_week.season.description %></td>
			<td><%= pgw.game_week.game_week_number %></td>
			<td><%= pgw.minutes_played %></td>
			<td><%= pgw.goals %></td>
			<td><%= pgw.clean_sheet %></td>
		</tr>
		<% end %>
	</tbody>
</table>
